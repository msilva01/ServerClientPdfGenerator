@model ServerClientPdfGenerator.ViewModels.ReportModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>My Report Test For User @Model.UserDto.FullName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
</head>
<body>
<div class="container-xl">
    <div class="mb-1">
        <div class="float-start fs-7" style="width: 70%">
            <span class="fw-bold">@Model.UserDto.FullName (@Model.UserDto.StoreName)</span>
        </div>
        <div class="float-end text-end fs-7" style="width: 30%">
            <span class="fst-italic">Date & Time: @DateTime.Now.ToShortDateString() &nbsp; @DateTime.Now.ToShortTimeString()</span>
        </div>
    </div>
</div>
</body>
</html>